[Unit]
Description=Resident app service for RDK platform
After=wpeframework.service wpeframework-system.service wpeframework-powermanager.service wpeframework-rdkshell.service lighttpd.service wpeframework-ocicontainer.service ermgr.service wpeframework-displayinfo.service wpeframework-playerinfo.service
Requires=wpeframework.service wpeframework-system.service wpeframework-powermanager.service wpeframework-rdkshell.service lighttpd.service wpeframework-ocicontainer.service ermgr.service wpeframework-displayinfo.service wpeframework-playerinfo.service

[Service]
Environment="LOGPATH=/opt/logs"
ExecStart=/bin/sh -c 'exec /lib/rdk/residentApp.sh &'
RemainAfterExit=yes
ExecStop=/bin/sh -c 'exec /lib/rdk/residentApp.sh stop'

[Install]
WantedBy=multi-user.target
